<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style pour les TextView des titres -->
    <style name="TextViewTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/title_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="TextViewQuizTitleStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/quiz_title_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>


    <style name="ButtonNextStyle" parent="Widget.Material3.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_corner_button</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ProgressBarStyleBlue" parent="@android:style/Widget.Material.Light.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/ligth_blue</item>
        <item name="android:minHeight">4dp</item>
        <item name="android:maxHeight">4dp</item>
    </style>

</resources>